<Window x:Class="SportWear.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportWear"
        mc:Ignorable="d"
        Title="ИС по прокату спортивного инвентаря" Height="600" Width="1000"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row ="0" Background="#FF76E351">
            <Image Source="/Modules/res/logo.png" HorizontalAlignment="Left"
                 VerticalAlignment="Center"  Margin="200 0 0 0">
            </Image>
            <TextBlock Text="ИС по прокату спортивного инвентаря"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" FontSize="25" Margin="20 0 0 0"></TextBlock>
        </Grid>
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
