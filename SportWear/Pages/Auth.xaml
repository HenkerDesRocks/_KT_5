<Page x:Class="SportWear.Pages.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SportWear.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ИС по прокату спортивного инвентаря - авторизация">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <Label Content="Логин"
                   Margin="0 5 0 0"></Label>
            <TextBox x:Name="login"
                     Margin="0 5 0 0" ></TextBox>
            <Label Content="Пароль"
                   Margin="0 5 0 0"></Label>
            <PasswordBox x:Name="password"
                         Margin="0 5 0 0"></PasswordBox>
            <Button x:Name="entBtn" Click="entBtn_Click" 
                    Height="25" Margin="0 5 0 0" Content="Войти" Background="#FF498C51"></Button>

        </StackPanel>
        
    </Grid>
</Page>
